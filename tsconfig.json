{
  "compilerOptions": {
    "target": "ES6",
    "typeRoots": ["./backend/typings", "./backend/node_modules/@types"],
    "types": ["@types/jest"],
    "outDir": "./build/",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules"]
}
